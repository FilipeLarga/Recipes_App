<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryExtraDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryExtraDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:colorBackground">@color/colorSecondaryExtraLight</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorSecondaryExtraLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryExtraDark</item>
    </style>

    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">23sp</item>
        <item name="android:fontFamily">@font/abel_regular</item>
        <item name="android:titleTextColor">@color/colorPrimaryExtraDark</item>
    </style>

</resources>
