        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="88dp"
            android:animateLayoutChanges="true"
            android:background="@drawable/rounded_rectangle_background"
            android:paddingStart="2dp"
            android:paddingTop="2dp"
            android:paddingEnd="2dp"
            android:paddingBottom="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ingredient_filter_textview">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.chip.ChipGroup
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:animateLayoutChanges="true">


                    <android.support.design.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:elevation="2dp"
                        android:text="bacon"
                        android:textAppearance="@style/ChipTextStyle"
                        android:textColor="@color/colorPrimaryDark"
                        app:chipBackgroundColor="@android:color/white"
                        app:chipIconTint="@color/colorSecondary" />

                    <android.support.design.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"
                        android:elevation="2dp"
                        android:text="bacon"
                        android:textAppearance="@style/ChipTextStyle"
                        android:textColor="@color/colorPrimaryDark"
                        app:chipBackgroundColor="@android:color/white"
                        app:chipIconTint="@color/colorSecondary"
                        app:chipStrokeColor="@color/colorSecondary"
                        app:chipStrokeWidth="1dp" />

                    <android.support.design.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Filter"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="8dp"
                        android:elevation="2dp"
                        android:text="Bacon"
                        android:textAppearance="@style/ChipTextStyle"
                        android:textColor="@color/colorPrimaryDark"
                        app:chipBackgroundColor="@android:color/white"
                        app:chipIconTint="@color/colorSecondary" />

                    <android.support.design.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="8dp"
                        android:elevation="2dp"
                        android:text="Bacon"
                        android:textAppearance="@style/ChipTextStyle"
                        android:textColor="@color/colorPrimaryDark"
                        app:chipBackgroundColor="@android:color/white"
                        app:chipIconTint="@color/colorSecondary" />

                    <android.support.design.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="8dp"
                        android:elevation="2dp"
                        android:text="Onions"
                        android:textAppearance="@style/ChipTextStyle"
                        android:textColor="@color/colorPrimaryDark"
                        app:chipBackgroundColor="@android:color/white"
                        app:chipIconTint="@color/colorSecondary" />


                </android.support.design.chip.ChipGroup>

            </android.support.v4.widget.NestedScrollView>


        </LinearLayout>


    </android.support.constraint.ConstraintLayout>


    <include layout="@layout/ingredient_filter_bottom_sheet" />

