<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CategoryListFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/categories_fragment_browse_header_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/categories_fragment_browse_header_left_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/colorSecondary"
            app:layout_constraintBottom_toBottomOf="@id/categories_fragment_browse_header_textview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/categories_fragment_browse_header_textview"
            app:layout_constraintTop_toTopOf="@id/categories_fragment_browse_header_textview" />

        <TextView
            android:id="@+id/categories_fragment_browse_header_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abel_regular"
            android:text="Browse"
            android:textColor="@color/colorSecondary"
            android:textSize="32sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:id="@+id/categories_fragment_browse_header_right_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/colorSecondary"
            app:layout_constraintBottom_toBottomOf="@id/categories_fragment_browse_header_textview"
            app:layout_constraintLeft_toRightOf="@id/categories_fragment_browse_header_textview"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/categories_fragment_browse_header_textview" />

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/categories_fragment_favorite_cardview"
        android:layout_width="168dp"
        android:layout_height="68dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryExtraLight"
        app:cardCornerRadius="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categories_fragment_browse_header_constraintLayout">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cardview_favorite_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="12dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Favorites"
                android:textColor="@color/colorSecondary"
                android:textSize="17sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/cardview_favorite_icon_imageview"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/cardview_favorite_icon_imageview"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:src="@drawable/category_icon_favorite_small"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cardview_favorite_recipe_count_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abel_regular"
                android:text="5 recipes"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@id/cardview_favorite_title_textview"
                app:layout_constraintTop_toBottomOf="@id/cardview_favorite_title_textview" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/categories_fragment_all_cardview"
        android:layout_width="168dp"
        android:layout_height="68dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorPrimaryExtraLight"
        app:cardCornerRadius="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categories_fragment_browse_header_constraintLayout">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cardview_all_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="12dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Recipes"
                android:textColor="@color/colorSecondary"
                android:textSize="17sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintLeft_toRightOf="@id/cardview_all_icon_imageview"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/cardview_all_icon_imageview"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:src="@drawable/category_icon_recipes_small"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cardview_all_recipe_count_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abel_regular"
                android:text="5 recipes"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@id/cardview_all_title_textview"
                app:layout_constraintTop_toBottomOf="@id/cardview_all_title_textview" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/categories_fragment_category_header_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/categories_fragment_favorite_cardview">

        <View
            android:id="@+id/categories_fragment_category_header_left_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@color/colorSecondary"
            app:layout_constraintBottom_toBottomOf="@id/categories_fragment_category_header_textview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/categories_fragment_category_header_textview"
            app:layout_constraintTop_toTopOf="@id/categories_fragment_category_header_textview" />

        <TextView
            android:id="@+id/categories_fragment_category_header_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abel_regular"
            android:text="Categories"
            android:textColor="@color/colorSecondary"
            android:textSize="32sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:id="@+id/categories_fragment_category_header_right_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@color/colorSecondary"
            app:layout_constraintBottom_toBottomOf="@id/categories_fragment_category_header_textview"
            app:layout_constraintLeft_toRightOf="@id/categories_fragment_category_header_textview"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/categories_fragment_category_header_textview" />

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/categories_fragment_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/categories_fragment_category_header_constraintLayout"></android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>