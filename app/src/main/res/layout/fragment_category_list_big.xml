<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ui.CategoryListFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/categories_fragment_favorites_cardview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="18dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/colorSecondaryExtraLight"
            app:cardCornerRadius="7dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/categories_fragment_all_cardview"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/categories_fragment_favorites_cardview_constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/categories_fragment_favorites_cardview_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lenkton_bold"
                    android:text="Favorites"
                    android:textColor="@color/colorPrimaryExtraDark"
                    android:textSize="24sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/categories_fragment_favorites_cardview_line_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/colorPrimaryExtraDark"
                    app:layout_constraintBottom_toTopOf="@id/categories_fragment_favorites_cardview_bottom_constraint"
                    app:layout_constraintTop_toBottomOf="@id/categories_fragment_favorites_cardview_title_textview" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/categories_fragment_favorites_cardview_bottom_constraint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/categories_fragment_favorites_cardview_line_divider">

                    <TextView
                        android:id="@+id/categories_fragment_favorites_cardview_recipe_count_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/abel_regular"
                        android:textColor="@color/colorSecondary"
                        android:textSize="28sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/categories_fragment_favorites_cardview_vertical_line_divider"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/categories_fragment_favorites_cardview_recipe_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/lenkton_bold"
                        android:text="Recipes"
                        android:textColor="@color/colorPrimaryExtraDark"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/categories_fragment_favorites_cardview_vertical_line_divider"
                        app:layout_constraintTop_toBottomOf="@id/categories_fragment_favorites_cardview_recipe_count_textview" />

                    <View
                        android:id="@+id/categories_fragment_favorites_cardview_vertical_line_divider"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@color/colorPrimaryExtraLight"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/categories_fragment_favorites_cardview_icon_imageview"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/category_icon_favorite_small"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/categories_fragment_favorites_cardview_vertical_line_divider"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/categories_fragment_all_cardview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="18dp"
            android:animateLayoutChanges="true"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/colorSecondaryExtraLight"
            app:cardCornerRadius="7dp"
            app:layout_constraintLeft_toRightOf="@id/categories_fragment_favorites_cardview"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/categories_fragment_all_cardview_small_constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/categories_fragment_all_cardview_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lenkton_bold"
                    android:text="All"
                    android:textColor="@color/colorPrimaryExtraDark"
                    android:textSize="24sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/categories_fragment_all_cardview_line_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/colorPrimaryExtraDark"
                    app:layout_constraintBottom_toTopOf="@id/categories_fragment_all_cardview_bottom_constraint"
                    app:layout_constraintTop_toBottomOf="@id/categories_fragment_all_cardview_title_textview" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/categories_fragment_all_cardview_bottom_constraint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/categories_fragment_all_cardview_line_divider">

                    <TextView
                        android:id="@+id/categories_fragment_all_cardview_recipe_count_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/abel_regular"
                        android:textColor="@color/colorSecondary"
                        android:textSize="28sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/categories_fragment_all_cardview_vertical_line_divider"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/categories_fragment_all_cardview_recipe_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/lenkton_bold"
                        android:text="Recipes"
                        android:textColor="@color/colorPrimaryExtraDark"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/categories_fragment_all_cardview_vertical_line_divider"
                        app:layout_constraintTop_toBottomOf="@id/categories_fragment_all_cardview_recipe_count_textview" />

                    <View
                        android:id="@+id/categories_fragment_all_cardview_vertical_line_divider"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@color/colorPrimaryExtraLight"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/categories_fragment_all_cardview_icon_imageview"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/category_icon_recipes_small"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/categories_fragment_all_cardview_vertical_line_divider"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>


        <android.support.constraint.ConstraintLayout
            android:id="@+id/categories_fragment_browse_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:animateLayoutChanges="true"
            app:layout_constraintBottom_toTopOf="@id/categories_fragment_recyclerView"
            app:layout_constraintTop_toBottomOf="@id/categories_fragment_favorites_cardview">

            <View
                android:id="@+id/categories_fragment_divider_line_left"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="12dp"
                android:background="@color/colorSecondary"
                app:layout_constraintBottom_toBottomOf="@id/categories_fragment_browse_textview"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/categories_fragment_browse_textview"
                app:layout_constraintTop_toTopOf="@id/categories_fragment_browse_textview" />

            <TextView
                android:id="@+id/categories_fragment_browse_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"

                android:layout_marginEnd="12dp"
                android:fontFamily="@font/abel_regular"
                android:text="Browse"
                android:textColor="@color/colorSecondary"
                android:textSize="36sp"
                app:layout_constraintLeft_toRightOf="@id/categories_fragment_divider_line_left"
                app:layout_constraintRight_toLeftOf="@id/categories_fragment_divider_line_right" />

            <View
                android:id="@+id/categories_fragment_divider_line_right"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginEnd="12dp"
                android:background="@color/colorSecondary"
                app:layout_constraintBottom_toBottomOf="@id/categories_fragment_browse_textview"
                app:layout_constraintLeft_toRightOf="@id/categories_fragment_browse_textview"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/categories_fragment_browse_textview" />

        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/categories_fragment_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/categories_fragment_browse_layout" />

    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>
